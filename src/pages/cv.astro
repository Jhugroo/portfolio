  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Skills</div>
  </div>

  <ul class="list-disc md:columns-5 columns-2 mx-6">
    <li>NextJs</li>
    <li>NodeJs</li>
    <li>Drupal</li>
    <li>Symfony</li>
    <li>Prisma</li>
    <li>Docker</li>
    <li>APIs</li>
    <li>Tailwind css</li>
    <li>Web Scraping</li>
    <li>Astro</li>
  </ul>
</BaseLayout>
